<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
<!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
<property name="LOG_HOME" value="/www/logs" />

<!-- 按月分目录 + 按天生成日志 -->
<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- 当前日志路径（由fileNamePattern自动推断，无需手动配置） -->

    <!-- 当前正在写的文件（不带日期） -->
    <file>${LOG_HOME}/app.log</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <!-- 格式：${LOG_HOME}/年-月/日志文件_年-月-日.log-->
        <fileNamePattern>${LOG_HOME}/%d{yyyy-MM, aux}/app_%d{yyyy-MM-dd}.log.zip</fileNamePattern>
        <!-- 不删除日志 -->
        <maxHistory>0</maxHistory>
        <!-- 总日志大小限制 -->
        <totalSizeCap>15GB</totalSizeCap>
    </rollingPolicy>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
        <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
    </encoder>
</appender>

<!-- 控制台输出（保持原样） -->
<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
        <pattern>%cyan(%d{MM-dd HH:mm:ss}) %highlight(%-5level) %logger{36} - %msg%n</pattern>
    </encoder>
</appender>

<root level="INFO">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
</root>
</configuration>